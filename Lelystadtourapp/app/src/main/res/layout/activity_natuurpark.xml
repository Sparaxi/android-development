<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".natuurparkActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />



    <Button
        android:id="@+id/info_textview_natuurpark"
        android:layout_width="65dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="60dp"
        android:layout_toRightOf="@+id/home_textview_natuurpark"
        android:gravity="center"
        android:background="@color/white"
        android:onClick="info"
        android:text="Info"
        android:textColor="@color/black"
        android:textSize="10sp"
        />

    <Button
        android:id="@+id/home_textview_natuurpark"
        android:layout_width="65dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:onClick="MainActivity"
        android:background="@color/white"
        android:text="Home"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/natuurpark" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="natuurpark Lelystad"
        android:textColor="#FFF6F6"
        android:textSize="30sp"
        android:background="#56000000"
        />

    <View
        android:id="@+id/info_background_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:background="#72494444"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/info_text_natuurpark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/natuurpark"
        android:layout_marginTop="90dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/info_hide"
        android:layout_width="65dp"
        android:layout_height="48dp"
        android:layout_marginLeft="180dp"
        android:layout_alignParentBottom="true"
        android:text="Hide"
        android:textSize="10dp"
        android:onClick="infoHide"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginBottom="62dp"
        android:visibility="gone"
        />

</RelativeLayout>